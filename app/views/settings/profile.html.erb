<p id="notice"><%= notice %></p>

<h1>Perfil</h1>

<%= link_to 'Trocar senha', user_password_path, class: 'btn btn-primary' %>

<%= form_with(model: @user, url: user_update_path, local: true) do |form| %>
  <%= hidden_field_tag 'setting_action', 'profile' %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-6 col-sm-12 col-md-12 mb-3">
      <%= form.label :name, "Nome", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class: "btn btn-primary text-white" %>
  </div>
<% end %>
