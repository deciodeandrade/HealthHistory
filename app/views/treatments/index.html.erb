<p id="notice"><%= notice %></p>

<h1>Tratamentos</h1>

<div class = "row">
  <div class="col-sm-6">
    <form method="get" class="busca">
      <label>Título:</label>
      <input type="text" class="form-control" name="title" value="<%= params[:title] %>" >
      <input type="submit" value="Buscar" class="btn btn-primary" style="margin-top:10px">
    </form>
  </div>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th scope="col">Título</th>
      <th scope="col">Data</th>
      <th scope="col">Localização</th>
      <th scope="col">Usuário</th>
      <th scope="col">Compartilhado</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @treatments.each do |treatment| %>
      <tr>
       <td><%=  treatment.title %></td>
        <td><%= treatment.treatment_date.strftime("%d/%m/%Y %k:%M") %></td>
        <td><%= treatment.treatment_location %></td>
        <td><%= treatment.user_id %></td>
        <td><%= treatment.shared %></td>
        <td>
          <%= link_to 'Visualizar', treatment, :class => 'btn btn-info text-white' %>
          <%= link_to 'Editar', edit_treatment_path(treatment), :class => 'btn btn-secondary text-white' %>
          <%= link_to 'Apagar', treatment, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-danger text-white' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tratamento', new_treatment_path, :class => 'btn btn-primary text-white' %>
