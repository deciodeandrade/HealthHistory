<p id="notice"><%= notice %></p>

<p>
  <strong>Título:</strong>
  <%= @treatment.title %>
</p>

<p>
  <strong>Data:</strong>
  <%= @treatment.treatment_date.strftime("%d/%m/%Y %k:%M") %>
</p>

<p>
  <strong>Localização:</strong>
  <%= @treatment.treatment_location %>
</p>

<p>
  <strong>Compartilhado:</strong>
  <%= @treatment.shared %>
</p>

<h4>Arquivos anexados</h4>
<% @treatment.files.each do |file| %>
  <%= link_to file.filename, url_for(file), class: 'downloads', target: '_blank' %>
  <br>
<% end %>

<br>
<%= link_to 'Editar', edit_consultation_treatment_path(@consultation, @treatment),  :class => 'btn btn-primary text-white' %>
<%= link_to 'Voltar', consultation_treatments_path(@consultation),  :class => 'btn btn-secondary text-white' %>
