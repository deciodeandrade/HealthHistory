<br>
<h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Cadastre-se</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-devise" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "Name", class: "form-control", placeholder: 'Nome' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'E-mail' %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: 'Senha' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'Confirmar senha' %>
  </div>

  <div class="actions">
    <hr>
    <%= f.submit "Cadastrar", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<div class='links'>
  <%= render "devise/shared/links" %>
</div>
