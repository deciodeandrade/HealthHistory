<h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Entrar</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-devise" }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'E-mail' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: 'Senha'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <hr>
    <%= f.submit 'Sign Up', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<div class='links'>
  <%= render "devise/shared/links" %>
</div>
