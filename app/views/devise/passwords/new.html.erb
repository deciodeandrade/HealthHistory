<h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Esqueceu sua senha?</h1>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-devise" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'E-mail' %>
  </div>

  <div class="actions">
    <hr>
    <%= f.submit "Enviar instruções", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
<div class='links'>
  <%= render "devise/shared/links" %>
</div>
